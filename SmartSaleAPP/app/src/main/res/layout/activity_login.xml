<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground1"
    tools:context=".Activities.LoginActivity">

    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginTop="256dp"
        android:backgroundTint="@color/buttonColor"
        android:onClick="SignIn"
        android:text="@string/btn_login_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LogoutBtn"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/buttonColor"
        android:onClick="LogOut"
        android:text="@string/btn_logout"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fragmentbutton" />

    <Button
        android:id="@+id/MarketsButton"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/buttonColor"
        android:onClick="OpenMarket"
        android:text="@string/btn_market"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignInBtn" />

    <Button
        android:id="@+id/Fragmentbutton"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/buttonColor"
        android:onClick="GotoFragmentView"
        android:text="CREATE NEW SALE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MarketsButton" />


</androidx.constraintlayout.widget.ConstraintLayout>